<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:id="emailValidationPane"
          fx:controller="org.example.eecs3311project.EmailValidationController"
          hgap="10"
          vgap="10"
          alignment="CENTER"
          styleClass="grid-pane">
    <children>
        <VBox alignment="CENTER" spacing="10">
            <children>
                <Label text="Enter email to validate:" />
                <TextField fx:id="emailTextField" promptText="Enter email address" />
                <Button fx:id="validateButton" text="Validate" onAction="#handleValidateButton" />
                <Button fx:id="backButton" text="Back" onAction="#handleBackButton" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</GridPane>